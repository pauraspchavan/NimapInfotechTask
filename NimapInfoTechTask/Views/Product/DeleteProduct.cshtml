@model NimapInfotechTaskModel.Product
@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>
<p>Are you sure you want to delete this product?</p>

@using (Html.BeginForm("DeleteProduct", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ProductID) <!-- Hidden field for ProductID -->

    <div>
        <strong>Product Name:</strong> @Model.ProductName
    </div>
    <div>
        <strong>Category ID:</strong> @Model.CategoryID
    </div>

    <button type="submit">Delete</button>
    <a href="@Url.Action("Index", "Product")">Cancel</a>
}
