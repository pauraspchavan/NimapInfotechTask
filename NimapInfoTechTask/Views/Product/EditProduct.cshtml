@model NimapInfotechTaskModel.Product

<h2>Edit Product</h2>

@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.ProductID) <!-- Hidden field for ProductID -->
    <div class="form-group">
        @Html.LabelFor(m => m.ProductName)
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryID)
        @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
}
